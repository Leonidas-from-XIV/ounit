  BuildDepends: unix

Library "oUnitThreads"
  Path: src
  Modules: OUnitThreads
  InternalModules: OUnitRunnerThreads
  BuildDepends: threads, oUnit
  FindlibParent: oUnit
  FindlibName: threads

# A fake test that generate an HTML output.
Executable testFakeHTML
  Path:   test
  MainIs: testFakeHTML.ml
  BuildDepends: oUnit
  Install: false

# The main test.
Executable test
  Path:   test
  MainIs: test.ml
  BuildDepends: oUnit
  Install: false

Test main
  Command: $test -xmllint $xmllint -testFakeHTML $testfakehtml
  TestTools: test, testFakeHTML, xmllint

